@model ASP_Helpdesk.ViewModel.ProvRegViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header">
                    <h4 class="m-b-0 text-white">Other Sample form</h4>
                </div>
                <div class="card-body">
                    <form action="#">
                        <div class="form-body">
                            <h3 class="card-title">Person Info</h3>
                            <hr>
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">First Name</label>
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group has-danger">
                                        <label class="control-label">Last Name</label>
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group has-success">
                                        <label class="control-label">Gender</label>
                                        <select class="form-control custom-select">
                                            <option value="">Male</option>
                                            <option value="">Female</option>
                                        </select>
                                        <small class="form-control-feedback"> Select your gender </small>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Role</label>
                                        <select class="form-control" id="Roles_Id" name="Roles_Id">
                                            @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.RoleList)
                                            {
                                                if (get.Selected)
                                                {
                                                    <option value="@get.Value" selected>@get.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@get.Value">@get.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Department</label>
                                        @Html.DropDownListFor(model => model.Departments_Id, ViewBag.DepList as SelectList, "--Pilih Department--", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <h3 class="box-title m-t-40">Address</h3>
                            <hr>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Province</label>
                                        <select class="form-control" id="Provinces_Id" name="Provinces_Id">
                                            @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.ProvList)
                                            {
                                                if (get.Selected)
                                                {
                                                    <option value="@get.Value" selected>@get.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@get.Value">@get.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Regency</label>
                                        <select class="form-control" id="Regencies_Id" name="Regencies_Id">
                                            @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.RegList)
                                            {
                                                if (get.Selected)
                                                {
                                                    <option value="@get.Value" selected>@get.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@get.Value">@get.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>District</label>
                                        <select class="form-control" id="Districts_Id" name="Districts_Id">
                                            @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.DisList)
                                            {
                                                if (get.Selected)
                                                {
                                                    <option value="@get.Value" selected>@get.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@get.Value">@get.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Village</label>
                                        <select class="form-control" id="Villages_Id" name="Villages_Id">
                                            @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.VilList)
                                            {
                                                if (get.Selected)
                                                {
                                                    <option value="@get.Value" selected>@get.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@get.Value">@get.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address</label>
                                        @*<input type="text" class="form-control">*@
                                        @Html.TextAreaFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Post Number</label>
                                        @Html.EditorFor(model => model.PostNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PostNumber, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <h3 class="box-title m-t-40">Account</h3>
                            <hr>
                            <div class="row">
                                <div class="col-md-6 ">
                                    @*<div class="form-group">
                                            <label>Email</label>
                                            <input type="text" class="form-control">
                                        </div>*@
                                    <div class="form-group">
                                        <label for="example-email">Email <span class="help"> e.g. "example@gmail.com"</span></label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Username</label>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->

                            </div>


                        </div>
                        <!----button ---->
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-inverse">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}





<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/jquery-2.2.4.min.js"></script>

<script>
    $(document).ready(function () {
        $("#Provinces_Id").change(function () {
            $.get("/Users/GetRegencyList", { Provinces_Id: $("#Provinces_Id").val() }, function (data) {
                $("#Regencies_Id").empty();
                $.each(data, function (index, row){
                    $("#Regencies_Id").append("<option value ='"+ row.Id +"'>"+ row.Name +"</option>")
                });
            });
        })
    });
    $(document).ready(function () {
        $("#Regencies_Id").change(function () {
            $.get("/Users/GetDistrictList", { Regencies_Id: $("#Regencies_Id").val() }, function (data) {
                $("#Districts_Id").empty();
                $.each(data, function (index, row) {
                    $("#Districts_Id").append("<option value ='" + row.Id + "'>" + row.Name + "</option>")
                });
            });
        })
    });
    $(document).ready(function () {
        $("#Districts_Id").change(function () {
            $.get("/Users/GetVillageList", { Districts_Id: $("#Districts_Id").val() }, function (data) {
                $("#Villages_Id").empty();
                $.each(data, function (index, row) {
                    $("#Villages_Id").append("<option value ='" + row.Id + "'>" + row.Name + "</option>")
                });
            });
        })
    });

</script>
