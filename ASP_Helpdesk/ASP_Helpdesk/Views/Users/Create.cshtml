@model ASP_Helpdesk.ViewModel.ProvRegViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header">
                    <h4 class="m-b-0 text-white">Other Sample form</h4>
                </div>
                <div class="card-body">
                    <form action="#">
                        <div class="form-body">
                            <h3 class="card-title">Person Info</h3>
                            <hr>
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">First Name</label>
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group has-danger">
                                        <label class="control-label">Last Name</label>
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group has-success">
                                        <label class="control-label">Gender</label>
                                        @Html.DropDownList("Gender", new List<SelectListItem>
                                        {
                                            new SelectListItem {Text ="--Pilih Gender--", Value="" },
                                            new SelectListItem {Text ="Laki-laki", Value="Laki-laki" },
                                            new SelectListItem {Text ="Perempuan", Value="Perempuan" }
                                        }, new {@class = "form-control"})
                                       
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Role</label>
                                        @Html.DropDownList("Roles_Id", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Roles_Id, "", new { @class = "text-danger"})
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Department</label>
                                        @Html.DropDownListFor(model => model.Departments_Id, ViewBag.DepList as SelectList, "--Pilih Department--", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <h3 class="box-title m-t-40">Address</h3>
                            <hr>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Province</label>
                                        @if (ViewBag.ProvList != null)
                                        {
                                            @Html.DropDownListFor(model => model.Provinces_Id, ViewBag.ProvList as SelectList, "--Pilih Provinsi--", new { @class = "form-control" })
                                        }
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Regency</label>
                                        @Html.DropDownListFor(model => model.Regencies_Id, new SelectList(""), "--Pilih Kabupaten--", new { @class = "form-control" })

                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>District</label>
                                        @Html.DropDownListFor(model => model.Districts_Id, new SelectList(""), "--Pilih Kecamatan--", new { @class = "form-control" })

                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Village</label>
                                        @Html.DropDownListFor(model => model.Villages_Id, new SelectList(""), "--Pilih Desa / Kelurahan--", new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address</label>
                                        @*<input type="text" class="form-control">*@
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @rows = "3" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Post Number</label>
                                        @Html.EditorFor(model => model.PostNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PostNumber, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <h3 class="box-title m-t-40">Account</h3>
                            <hr>
                            <div class="row">
                                <div class="col-md-6 ">
                                    @*<div class="form-group">
                                            <label>Email</label>
                                            <input type="text" class="form-control">
                                        </div>*@
                                    <div class="form-group">
                                        <label for="example-email">Email <span class="help"> e.g. "example@gmail.com"</span></label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Username</label>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "form-text text-muted" })
                                    </div>
                                </div>
                                <!--/span-->

                            </div>


                        </div>
                        <!----button ---->
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-inverse">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/jquery-2.2.4.min.js"></script>

<script>
    $(document).ready(function () {
        $("#Provinces_Id").change(function () {
            $.get("/Users/GetRegencyList", { Provinces_Id: $("#Provinces_Id").val() }, function (data) {
                $("#Regencies_Id").empty();
                $.each(data, function (index, row){
                    $("#Regencies_Id").append("<option value ='"+ row.Id +"'>"+ row.Name +"</option>")
                });
            });
        })
    });
    $(document).ready(function () {
        $("#Regencies_Id").change(function () {
            $.get("/Users/GetDistrictList", { Regencies_Id: $("#Regencies_Id").val() }, function (data) {
                $("#Districts_Id").empty();
                $.each(data, function (index, row) {
                    $("#Districts_Id").append("<option value ='" + row.Id + "'>" + row.Name + "</option>")
                });
            });
        })
    });
    $(document).ready(function () {
        $("#Districts_Id").change(function () {
            $.get("/Users/GetVillageList", { Districts_Id: $("#Districts_Id").val() }, function (data) {
                $("#Villages_Id").empty();
                $.each(data, function (index, row) {
                    $("#Villages_Id").append("<option value ='" + row.Id + "'>" + row.Name + "</option>")
                });
            });
        })
    });

</script>
