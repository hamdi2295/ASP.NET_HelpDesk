@model IEnumerable<ASP_Helpdesk.User>
@{
    ViewBag.Title = "Index";
}
<div class="animated fadeIn">

    <br />
    <a align="right" class="btn btn-primary fa fa-plus" href="@Url.Action("Create","Users")"> Tambah Data</a>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-header">
                    <strong class="card-title">Data Users</strong>

                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" href="@Url.Action("Edit","Users", new { id = item.Id })">Edit</a> |
                                        <a class="btn btn-primary" href="@Url.Action("Details","Users", new { id = item.Id })">Details</a> |
                                        <a class="btn btn-danger" href="@Url.Action("Delete","Users", new { id = item.Id })">Delete</a>
                                    </td>

                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


