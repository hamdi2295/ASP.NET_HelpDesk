@model ASP_Helpdesk.User
@{
    ViewBag.Title = "Delete";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Are you sure want to delete this?</strong>
        </div>
        <div class="card-body card-block">
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">First Name </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.FirstName)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Last Name </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.LastName)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Username </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Gender </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Gender)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Password </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Password)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Phone Number </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Provinsi </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Village.District.Regency.Province.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Regency </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Village.District.Regency.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">District</label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Village.District.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Village</label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Village.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Address </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Address)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Post Number </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.PostNumber)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Email </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Department </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Department.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Role </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Role.Name)
                    </div>
                </div>

            </form>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-footer">
                <button type="submit" value="Delete" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i>Delete
                </button>
                <a href="@Url.Action("Index", "Users")" class="btn btn-primary btn-sm">
                    <i class=""></i> Back
                </a>
            </div>
        }
    </div>
</div>