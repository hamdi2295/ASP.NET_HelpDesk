@model ASP_Helpdesk.SubCategory
@{
    ViewBag.Title = "Delete";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Are you sure want to delete this?</strong>
        </div>
        <div class="card-body card-block">
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nama Sub Category </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nama Category </label></div>
                    <div class="col-12 col-md-9">
                        : @Html.DisplayFor(model => model.Category.Name)
                    </div>
                </div>

            </form>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-footer">
                <button type="submit" value="Delete" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i>Delete
                </button>
                <a href="@Url.Action("Index", "Category")" class="btn btn-primary btn-sm">
                    <i class=""></i> Back
                </a>
            </div>
        }
    </div>
</div>