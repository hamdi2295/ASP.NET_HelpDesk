@model ASP_Helpdesk.SubCategory

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Edit Data</strong>
            </div>
            <div class="card-body card-block">
                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <div class="row form-group">

                        <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nama Sub Category</label></div>
                        <div class="col-12 col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "form-text text-muted" })

                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nama Category </label></div>
                        <div class="col-12 col-md-9">
                            <select class="form-control" id="Categories_Id" name="Categories_Id">
                                @foreach (var get in (IEnumerable<SelectListItem>)ViewBag.Categories_Id)
                                {
                                    if (get.Selected)
                                    {
                                        <option value="@get.Value" selected>@get.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@get.Value">@get.Text</option>
                                    }
                                }
                            </select>

                        </div>
                    </div>

                </form>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Save
                </button>

            </div>
        </div>
    </div>
}
