@model ASP_Helpdesk.ViewModel.TiketViewModel

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header">
                    <strong>Edit : </strong> Ticket
                </div>
                <div class="card-body">
                    <form action="#">
                        <div class="form-body">

                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group m-t-40 row">
                                        <label for="example-text-input" class="col-2 col-form-label">Today : </label>
                                        <div class="col-auto">
                                            <input class="form-control" placeholder="September 19, 2018 " readonly="" type="text">
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group m-t-40 row">
                                        <label for="example-text-input" class="col-4 col-form-label">Technician : </label>
                                        <div class="col-auto">
                                            @Html.EditorFor(model => model.Techinician, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                            @Html.ValidationMessageFor(model => model.Techinician, "", new { @class = "form-text text-muted" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label class="control-label"> Client</label>
                                            @Html.EditorFor(model => model.Client, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                            @Html.ValidationMessageFor(model => model.Client, "", new { @class = "form-text text-muted" })
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label class="control-label">Categeory</label>
                                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "form-text text-muted" })
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label class="control-label">Sub Categeory</label>
                                            @Html.EditorFor(model => model.SubCat, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                            @Html.ValidationMessageFor(model => model.SubCat, "", new { @class = "form-text text-muted" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Description</label>
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "form-text text-muted" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label class="control-label">Status</label>

                                            @Html.DropDownList("Status", new List<SelectListItem>
                                            {
                                           new SelectListItem{ Text="Select The status", Value = "" },
                                           new SelectListItem{ Text="Progress", Value = "On Progress" },
                                           new SelectListItem{ Text="Waiting", Value = "On Waiting" },
                                           new SelectListItem{ Text="Hold", Value = "On Hold" },
                                           new SelectListItem{ Text="Finish", Value = "Close" },
                                            }, null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <br />
                            <!----button ---->
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                                <button type="button" class="btn btn-inverse" onclick="@Url.Action("Index","Ticket")">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


}

